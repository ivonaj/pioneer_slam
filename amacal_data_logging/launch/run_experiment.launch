<launch>
  <arg name="record" default="false" />
  <arg name="path" default="$(env HOME)/bags"/>
  <arg name="prefix" default="amacal"/>

  <arg name="Gain" default="30" />
  <arg name="ExposureTime" default="5000" />
  <arg name="TimeOffset" default="-0.0591562746534" />
  
  <include file="$(find amacal_data_logging)/launch/laser.launch" />
  <include file="$(find amacal_data_logging)/launch/camera.launch">
    <arg name="Gain" default="$(arg Gain)" />
    <arg name="ExposureTime" default="$(arg ExposureTime)" />
    <arg name="TimeOffset" default="$(arg TimeOffset)" />
  </include>

  <include file="$(find amacal_data_logging)/launch/imu.launch" />
  <include file="$(find amacal_data_logging)/launch/record.launch"
           if="$(arg record)">
    <arg name="path" value="$(arg path)"/>
    <arg name="prefix" value="$(arg prefix)"/>
  </include>

</launch>
